[alias]
	br = branch
	ch = cherry-pick
	ci = commit
	co = checkout
	df = diff
	d  = diff --word-diff-regex=. --word-diff=color
	dd = diff --color-words --word-diff-regex='[A-z_][A-z_]*'
	lg = log --pretty=vay
	lv = log --pretty=vaylong
	rb = rebase
	rl = rev-list
	st = status
	up = pull --ff-only

[branch]
	autosetuprebase = remote

[color]
	branch = auto
	diff = auto
	status = auto

[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
	whitespace = red reverse

[commit]
	status = false

[core]
	excludesfile = ~/.gitexclude
	pager = cat
	whitespace = trailing-space,space-before-tab

[diff]
	renames = copies

[log]
	date = iso

[pretty]
	vay = %Cgreen%h %Creset%s%Creset
	vaylong = %Cgreen%h %Cred%an %Cgreen%aD %Creset%s

[push]
	default = tracking

[status]
	color = auto

[user]
	name = Vasiliy Yeremeyev

